<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

 <context:component-scan base-package="edu.kiet.springfullexample"></context:component-scan>   
   <bean id="bike" class="edu.kiet.springfullexample.Bike"  >
    <property name="name" value="Honda Shine"></property>
    <property name="model" value="2020"></property>  
   </bean>
<bean id="scooty" class="edu.kiet.springfullexample.Scooty"  >
    <constructor-arg value="Honda Activa"></constructor-arg>
    <constructor-arg value="2021"></constructor-arg>  
   </bean>  

</beans>